{
  "private": true,
  "name": "sls",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && webpack --config ./webpack.config.js --mode production --progress",
    "dev": "npm run clean && webpack --config ./webpack.config.js --mode development",
    "start": "webpack-dev-server --config ./webpack.config.js --mode development",
    "clean": "rimraf ./dist",
    "deploy": "gh-pages -d dist"
  },
  "lint-staged": {
    "*.{css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    "dist/*"
  ],
  "alias": {
    "preact": "./node_modules/preact/dist/preact.min.js"
  },
  "dependencies": {
    "@types/classnames": "^2.2.10",
    "@types/lodash": "^4.14.149",
    "classnames": "^2.2.6",
    "d3-drag": "^1.2.5",
    "d3-force": "^2.0.1",
    "d3-selection": "^1.4.1",
    "eslint-plugin-preact": "^0.1.0",
    "fork-ts-checker-webpack-plugin": "^4.0.5",
    "lodash": "^4.17.15",
    "preact": "^10.3.4",
    "preact-habitat": "^3.3.0",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.1.4"
  },
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.1.0",
    "@types/d3-drag": "^1.2.3",
    "@types/d3-force": "^1.2.1",
    "@types/d3-selection": "^1.4.1",
    "@types/superagent": "^4.1.7",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.0",
    "gh-pages": "^2.2.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "4.42.0",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3"
  }
}
